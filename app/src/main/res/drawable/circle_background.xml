<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Nền màu của hình tròn -->
    <solid android:color="#EEEEEE" />

    <!-- Đường viền xung quanh hình tròn -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Độ rộng padding trong hình tròn -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
